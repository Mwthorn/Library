package hjemmeopgave1;

import java.util.Random;

public class CatAndMouseWithLake {
	private static int paramB, paramL, catXPos, catYPos, mouseXPos, mouseYPos, lakeX, lakeY;
	private static boolean caught = false;

	public static void runCatAndMouse(int n, int catX, int catY, int mouseX, int mouseY, int m, int lakeLLX, int lakeLLY) {
		// Assigning global variables the initial values
		paramB = n;
		paramL = m;
		catXPos = catX;
		catYPos = catY;
		mouseXPos = mouseX;
		mouseYPos = mouseY;
		lakeX = lakeLLX;
		lakeY = lakeLLY;
		int moveNum = 1;

		System.out.println(n + " [" + catX + ";" + catY + "]" + " [" + mouseX + ";" + mouseY + "]");

		// Check for invalid arguments or starting positions (negative board
		// size, cat on mouse, etc)
		if (catX >= n || catY >= n || mouseX >= n || mouseY >= n || catX < 0 || catY < 0 || mouseX < 0 || mouseY < 0
				|| n <= 0 || (catX == mouseX && catY == mouseY))
			System.out.println("ERROR");
		else if (((catX >= lakeLLX && catX <= lakeLLX + (m - 1)) && (catY >= lakeLLY && catY <= lakeLLY + (m - 1))) || 
				((mouseX >= lakeLLX && mouseX <= lakeLLX + (m - 1)) && (mouseY >= lakeLLY && mouseY <= lakeLLY + (m - 1))) || m <= 0 ||
				m >= n - 1 || lakeLLX == 0 || lakeLLY == 0 || lakeLLX + (m - 1) >= n-1 || lakeLLY + (m - 1) >= n-1) {
			System.out.println("ERROR");
		}
		else {

			// We will keep on running the game as long as the mouse is not
			// caught

			while (caught == false) {
				mouseMove();
				catMove();
				System.out.println("Move " + moveNum + " [" + catXPos + ";" + catYPos + "]" + " [" + mouseXPos + ";"
						+ mouseYPos + "]");
				moveNum++;
			}

			System.out.println("You caught the mouse!");
		}
	}

	public static void mouseMove() {
		// Using Random instead of Math.random for whole value integers between
		// paramBeters
		Random dice = new Random();
		boolean valid = false;

		while (valid == false) {
			int direction = dice.nextInt(5);

			if (direction == 0)
				System.out.println(direction + " - Stay");
			if (direction == 1)
				System.out.println(direction + " - Right");
			if (direction == 2)
				System.out.println(direction + " - Down");
			if (direction == 3)
				System.out.println(direction + " - Left");
			if (direction == 4)
				System.out.println(direction + " - Up");

			if (direction == 1 && mouseXPos + 1 != paramB) {
				if ((mouseXPos + 1 != catXPos || mouseYPos != catYPos) && (mouseXPos + 1 != lakeX || 
						!(mouseYPos >= lakeY) && (mouseYPos <= lakeY + (paramL - 1)))) {
					mouseXPos++;
					valid = true;
				}
			} else if (direction == 2 && mouseYPos - 1 != -1) {
				if ((mouseYPos - 1 != catYPos || mouseXPos != catXPos) && (mouseYPos - 1 != lakeY + (paramL - 1) || 
						!(mouseXPos <= lakeX + (paramL - 1) && mouseXPos >= lakeX))) {
					mouseYPos--;
					valid = true;
				}
			} else if (direction == 3 && mouseXPos - 1 != -1) {
				if ((mouseXPos - 1 != catXPos || mouseYPos != catYPos) && (mouseXPos - 1 != lakeX + (paramL - 1) || 
						!(mouseYPos <= lakeY + (paramL - 1) && mouseYPos >= lakeY))) {
					mouseXPos--;
					valid = true;
				}
			} else if (direction == 4 && mouseYPos + 1 != paramB) {
				if ((mouseYPos + 1 != catYPos || mouseXPos != catXPos) && (mouseYPos + 1 != lakeY || 
						!(mouseXPos >= lakeX) && (mouseXPos <= lakeX + (paramL - 1)))) {
					mouseYPos++;
					valid = true;
				}
			} else if (direction == 0)
				valid = true;
		}
	}

	public static void catMove() {
		int moves = 0;
		while (moves < 2 && caught == false) {
			if(moves == 0) {
				if(catXPos < mouseXPos && catYPos < mouseYPos && !checkIfLake(catXPos + 1, catYPos + 1)) {
					catXPos++;
					catYPos++;
					break;
				}
				else if(catXPos < mouseXPos && catYPos > mouseYPos && !checkIfLake(catXPos + 1, catYPos - 1)) {
					catXPos++;
					catYPos--;
					break;
				}
				else if(catXPos > mouseXPos && catYPos < mouseYPos && !checkIfLake(catXPos - 1, catYPos + 1)) {
					catXPos--;
					catYPos++;
					break;
				}
				else if(catXPos > mouseXPos && catYPos > mouseYPos && !checkIfLake(catXPos - 1, catYPos - 1)) {
					catXPos--;
					catYPos--;
					break;
				}
			}
			if (catXPos < mouseXPos)
				if (checkIfLake(catXPos + 1, catYPos)) {
					System.out.println("found lake on X + 1");
					if (catYPos == mouseYPos) {
						System.out.println("should take shortest route");
						// if this is true, 
						// take the shortest route around the lake
						int checkY = 0;
						boolean foundPath = false;
						while (!(foundPath)) {
							if (!(checkIfLake(catYPos + checkY, catXPos + 1))) {
								// go up (that's the shortest way)
								catYPos++;
								foundPath = true;
							}
							else if (!(checkIfLake(catYPos - checkY, catXPos + 1))) {
								// go down (that's the shortest way)
								catYPos--;
								foundPath = true;
							}
							else {
								// check further up and down
								checkY++;
							}
						}
						// while loop ends (it has found the shortest 
						// way around the lake)
					}

					// if not the same
					// 
					else if ((((lakeY - paramL - 1) - lakeY) - (catYPos - lakeY)  / 2) == 
							((lakeY - paramL - 1) - lakeY) - (mouseYPos - lakeY)) {
						// Choose a random path (in our case, up)
						catYPos++;
					}
					else if ((((lakeY - paramL - 1) - lakeY) - (catYPos - lakeY)  / 2) > 
							((lakeY - paramL - 1) - lakeY) - (mouseYPos - lakeY)) {
						catYPos--;
					} 
					// we know that there is one option left
					else {
						catYPos++;
					}
				}
				else {
					catXPos++;
				}
			
			else if (catXPos > mouseXPos)
				if (checkIfLake(catXPos - 1, catYPos)) {
					System.out.println("found lake on X - 1");
					if (catYPos == mouseYPos) {
						// if this is true, 
						System.out.println("should take shortest route");
						// take the shortest route around the lake
						int checkY = 0;
						boolean foundPath = false;
						while (!(foundPath)) {
							if (!(checkIfLake(catXPos - 1, catYPos + checkY))) {
								// go up (that's the shortest way)
								catYPos++;
								foundPath = true;
							}
							else if (!(checkIfLake(catXPos - 1, catYPos - checkY))) {
								// go down (that's the shortest way)
								catYPos--;
								foundPath = true;
							}
							else {
								// check further up and down
								checkY++;
							}
						}
						// while loop ends (it has found the shortest 
						// way around the lake)
					}

					// if not the same
					// 
					else if ((((lakeY - paramL - 1) - lakeY) - (catYPos - lakeY)  / 2) == 
							((lakeY - paramL - 1) - lakeY) - (mouseYPos - lakeY)) {
						// Choose a random path (in our case, up)
						catYPos++;
					}
					else if ((((lakeY - paramL - 1) - lakeY) - (catYPos - lakeY)  / 2) > 
							((lakeY - paramL - 1) - lakeY) - (mouseYPos - lakeY)) {
						catYPos--;
					} 
					// we know that there is one option left
					else {
						catYPos++;
					}
				}
				else {
				catXPos--;
				}
			
			else if (catYPos < mouseYPos)
				if (checkIfLake(catXPos, catYPos + 1)) {
					System.out.println("found lake on Y + 1");
					if (catXPos == mouseXPos) {
						// if this is true, 
						System.out.println("should take shortest route");
						// take the shortest route around the lake
						int checkX = 0;
						boolean foundPath = false;
						while (!(foundPath)) {
							if (!(checkIfLake(catXPos + checkX, catYPos + 1))) {
								// go right (that's the shortest way)
								catXPos++;
								foundPath = true;
							}
							else if (!(checkIfLake(catYPos - checkX, catYPos + 1))) {
								// go left (that's the shortest way)
								catXPos--;
								foundPath = true;
							}
							else {
								// check further up and down
								checkX++;
							}
						}
						// while loop ends (it has found the shortest 
						// way around the lake)
					}

					// if not the same
					// 
					else if ((((lakeX - paramL - 1) - lakeX) - (catXPos - lakeX)  / 2) == 
							((lakeX - paramL - 1) - lakeX) - (mouseXPos - lakeX)) {
						// Choose a random path (in our case, right)
						catXPos++;
					}
					else if ((((lakeX - paramL - 1) - lakeX) - (catXPos - lakeX)  / 2) > 
							((lakeX - paramL - 1) - lakeX) - (mouseXPos - lakeX)) {
						catXPos--;
					} 
					// we know that there is one option left
					else {
						catXPos++;
					}
				}
				else {
					catYPos++;
				}
			
			else if (catYPos > mouseYPos)
				if (checkIfLake(catXPos, catYPos - 1)) {
					System.out.println("found lake on Y - 1: " + catXPos + "," + (catYPos - 1));
					if (catXPos == mouseXPos) {
						// if this is true, 
						System.out.println("should take shortest route");
						// take the shortest route around the lake
						int checkX = 0;
						boolean foundPath = false;
						while (!(foundPath)) {
							if (!(checkIfLake(catXPos + checkX, catYPos - 1))) {
								// go right (that's the shortest way)
								catXPos++;
								foundPath = true;
							}
							else if (!(checkIfLake(catYPos - checkX, catYPos - 1))) {
								// go left (that's the shortest way)
								catXPos--;
								foundPath = true;
							}
							else {
								// check further up and down
								checkX++;
							}
						}
						// while loop ends (it has found the shortest 
						// way around the lake)
					}

					// if not the same
					// 
					else if ((((lakeX - paramL - 1) - lakeX) - (catXPos - lakeX)  / 2) == 
							((lakeX - paramL - 1) - lakeX) - (mouseXPos - lakeX)) {
						// Choose a random path (in our case, right)
						
						catXPos++;
					}
					else if ((((lakeX - paramL - 1) - lakeX) - (catXPos - lakeX)  / 2) > 
							((lakeX - paramL - 1) - lakeX) - (mouseXPos - lakeX)) {
						catXPos--;
					} 
					// we know that there is one option left
					else {
						System.out.println("go right");
						catXPos++;
					}
				}
				else {
					catYPos--;
				}
			
			moves++;

			if (catXPos == mouseXPos && catYPos == mouseYPos)
				caught = true;
			
			
		}
	}
	
	public static boolean checkIfLake(int checkX, int checkY) {
		boolean lakeThere = false;
		
		if ((checkX >= lakeX && checkX <= lakeX + (paramL - 1)) && (checkY >= lakeY && checkY <= lakeY + (paramL - 1)))
			lakeThere = true;
		
		return lakeThere;
	}
}
